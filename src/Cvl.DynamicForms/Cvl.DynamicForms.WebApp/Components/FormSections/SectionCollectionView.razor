@using Cvl.DynamicForms.Core.Models
@using Cvl.DynamicForms.WebApp.Components.FormElements

<fieldset class="border my-3 p-1">
    <legend class="w-auto">@Model.Name</legend>

    <div class="row">
        @foreach (var control in Model.Children)
        {
            <ControlView Model=@control></ControlView>
        }
    </div>

</fieldset>

@code {
    [Parameter]
    public FormSection? Model { get; set; }
}
