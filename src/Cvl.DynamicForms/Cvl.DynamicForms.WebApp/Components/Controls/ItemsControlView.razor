@using Cvl.DynamicForms.Core.Models
@using Cvl.DynamicForms.WebApp.Components.Controls.ItemsControls
@using Cvl.DynamicForms.WebApp.Components.FormElements

@if (Model != null)
{
    @switch (Model.Type)
    {
        case ControlType.Grid:
            <GridView Model="Model"></GridView>
            break;
        case ControlType.Container:
            <ContainerView Model="Model"></ContainerView>
            break;
        default:
            <div>Nieznany typ sekcji: @Model.Type</div>
            break;
    }
}


@code {
    [Parameter]
    public ItemsControl? Model { get; set; }
}
