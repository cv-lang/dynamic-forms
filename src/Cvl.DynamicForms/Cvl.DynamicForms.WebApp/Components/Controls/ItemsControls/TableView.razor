@    using Cvl.DynamicForms.Core.Models
@    using Cvl.DynamicForms.WebApp.Components.FormElements

@if (Model != null)
{
    <MudSimpleTable Style="overflow-x: auto;">
        <thead>
            <tr>
                @foreach (var element in Model.Children)
                {
                    <th>@element.Name</th>
                }
            </tr>
        </thead>
        <tbody>
            @for (int i=0; i<10; i++)
            {
                <tr>
                    @foreach (var element in Model.Children)
                    {
                        <td>@element.Id</td>
                    }
                </tr>
            }
        </tbody>
    </MudSimpleTable>
}

@code {
    [Parameter]
    public ItemsControl? Model { get; set; }
}
