@model Cvl.DynamicForms.Model.ViewModel.TreeListViewModel
@{
    <table class="table table-hover">
        <thead>
            <tr>

                <th>#</th>
                @foreach (var col in Model.Columns)
                {
                    <th scope="col">
                        @col.Header
                    </th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model.Rows)
            {
            <tr>
                <th><button type="button" class="btn btn-sm btn-outline-primary py-0" style="font-size: 0.8em;" onclick="getData(@row.Id, 'Logger', @row.Id)">Get</button></th>
                <th id="@row.Id"></th>
                <th scope="col"><a href="@row.EditUrl">@row.Id</a></th>
                @foreach (var cell in row.Cells)
                {
                    if (@cell.EditUrl != null)
                    {
                        <td><a href="@cell.EditUrl">@cell.Value</a></td>
                    }
                    else
                    {
                        <td>@cell.Value</td>
                    }
                }
            </tr>
            }

        </tbody>
    </table>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        function getData(id, type, targetdiv) {
            $.ajax({
                type: "get",
                url: "/DynamicForms/TreeList/Node?Id=" + id + "&type=" + type,
                dataType: "html",
                contentType: "text/html",
                success: function (data) {
                    $('#' + targetdiv).append(data);
                },
                failure: function (response) {
                    alert("niefajne");
                }
            })
        }

    </script>

}

