@model Cvl.DynamicForms.Model.PropertyBaseVM
@using  System.ComponentModel.DataAnnotations;

@if (Model is Cvl.DynamicForms.Model.SimplePropertyVM)
{
    @await Component.InvokeAsync("SimplePropertyView", Model)
}
else if (Model is Cvl.DynamicForms.Model.ViewModel.GridVM)
{
    @await Component.InvokeAsync("GridView", Model)
}
else if (Model is Cvl.DynamicForms.Model.GroupVM)
{
    @await Component.InvokeAsync("GroupView", Model)
}


